            /* CSS */
.bus-table {
    list-style-type: none; /* Remove default list styles */
    display: table; /* Display the list as a table */
    width: 100%; /* Make the table fill its container */
  }
  
  .bus-table li {
    display: table-row; /* Display each list item as a table row */
  }
  
  .bus-table div {
    display: table-cell; /* Display each value container as a table cell */
    padding: 8px; /* Add padding for spacing */
    border-bottom: 1px solid #ccc; /* Add border between rows */
  }

  #addBusModal {
  background-color: #fff; /* Light background */
  border: 1px solid #ddd; /* Subtle border */
  border-radius: 5px; /* Rounded corners */
  padding: 20px; /* Padding for content */
  width: 500px; /* Adjust width as needed */
  max-width: 80%; /* Responsive width */
  position: fixed; /* Fixed positioning */
  top: 50%; /* Center vertically */
  left: 50%; /* Center horizontally */
  transform: translate(-50%, -50%); /* Center positioning adjustment */
  z-index: 10; /* Ensure modal appears above other elements */
  display: none; /* Initially hidden */
}

.modal-content {
  display: flex; /* Flexbox layout for form */
  flex-direction: column; /* Stack form elements vertically */
}

.close {
  color: #aaa; /* Gray close button color */
  font-size: 28px; /* Larger close button font */
  font-weight: bold; /* Thicker close button font */
  cursor: pointer; /* Indicate clickable behavior */
  position: absolute; /* Position close button in top right corner */
  right: 10px; /* Adjust close button position */
  top: 10px; /* Adjust close button position */
}

h2 {
  margin-bottom: 15px; /* Spacing after heading */
}

.form-group {
  margin-bottom: 10px; /* Spacing between form groups */
}

label {
  display: block; /* Display labels on their own lines */
  margin-bottom: 5px; /* Spacing after labels */
}

input[type="text"],
input[type="number"],
input[type="time"] {
  padding: 8px; /* Input field padding */
  border: 1px solid #ccc; /* Input field border */
  border-radius: 3px; /* Rounded input field corners */
  width: 100%; /* Full-width input fields */
}
  
